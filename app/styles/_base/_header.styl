header
	color white
	height 500px
	position relative
	margin-top 100px
	width 100%

.header-bg
	background-image url('/images/bg.jpg')
	background-position center top
	-moz-background-size cover
	-webkit-background-size cover
	-o-background-size cover
	background-size cover
	background-repeat no-repeat
	position fixed
	height 500px
	overflow-x hidden
	top 100px
	width 100%
	z-index 0

.header_inferior
	background negro
	position fixed
	left 0
	top 0
	height 100px
	width 100%
	z-index 10

	&:before
		content ""
		border-top 40px solid negro
		border-right  50px solid transparent
		border-left solid transparent
		position absolute
		margin-left -10px
		top 100px
		z-index -1
		width 35%

.header__nav
	list-style none
	line-height 100px
	font-size 0

	li
		display inline-block
		padding 0 20px

	a
		color white
		font-size 1.6rem
		padding-bottom 3px

		&:hover, &.active
			border-bottom 3px solid amarillo
			text-decoration none


.header__logo
	line-height 100px

.header__logo-img
	width 24%
	margin-left -7%
	margin-top 0px
	
.header__title
	color negro
	font-size 3.7rem
	position absolute
	top 350px
	left 0px
	text-transform uppercase
	font-style italic

.adorno_inferior
	background gris
	color white
	height 50px
	position absolute
	width 100%
	bottom 0
	z-index 2

	&:before
		content ""
		border-bottom 40px solid gris
		border-left  50px solid transparent
		border-right 0px solid transparent
		position absolute
		top -35px
		z-index -1
		width 30%
		right 0px

.imagen_abejas
	width 100%
	height 250px
	position absolute
	z-index -2
	top 100px
			
	
@media screen and (max-width 1300px)
	header
		.header_inferior
			height 20%
					
		.header__nav
			background negro
			font-weight bold
								
			li
				height 100%
				width 20%
				display inline-block
				top -15px
				text-align center
				
				&:hover
					background amarillo
					text-decoration none
					
	.pull-right
		width 100%
		height 100%
		
	.header__logo-img
		width 25%
		height 50%
		margin-left 40px
		position relative
		left 25%
		
	.container
		width 100%
		padding 0	
	
	.adorno_inferior
		display none
	
	.header__title
		top 350px
		
		
		
@media screen and (max-width 900px)
	header
		.header__nav
			background negro			
					
			li
				height 100%
				width 100%
				margin 0
				display inline-block
				text-align left
				
				
				&:hover
					background amarillo
					text-decoration none
		
	.pull-right
		width 100%
		height 100%
	
	.header__logo-img
		width 35%
		height 40%
		margin-left 20px
		
	.container
		padding-right 0
		padding-left 0	
		
	.header-bg
		display none

@media screen and (max-width 800px)
	header
		&:before
			display none
		.header__nav
			background negro
			
					
